{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++.exe build active file",
            "type": "shell",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                //"${fileDirname}\\**.h",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "command": "g++",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "exec",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            // "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}